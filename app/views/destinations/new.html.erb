
<h1>Create New Destination</h1>

<%= form_with model: @destination do |form| %>
  <div>
    <%= form.label :city_name %><br>
    <%= form.text_field :city_name %>
  </div>

  <div>
    <%= form.label :state_name %><br>
    <%= form.text_field :state_name %>
  </div>
  
  <%= fields_for :hotel, @destination.hotel do |hotel_name| %>
  <%= hotel_name.label :hotel_name %><br>
  <%= hotel_name.text_field :hotel_name %><br>
  <% end %>

  <br>
  <div>
    <%= form.submit %>
  </div>
 
<% end %><br>
<%= link_to "Show All Destinations ", destinations_path %><br>
